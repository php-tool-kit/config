<!--
see https://www.phing.info/guide/chunkhtml/ch04s02.html https://www.phing.info/guide/chunkhtml/sec.morecomplexbuildfile.html
-->
<project name="ConfMgr" default="dist">
    <target name="phpunit">
        <echo msg="Testando com PHPUnit" />
        <exec executable="./vendor/bin/phpunit" dir=".">
            <arg value="--configuration conf/phpunit.xml" />
        </exec>
    </target>
    
    <target name="phpdocumentor">
        <echo msg="Gerando a documentação..." />
        <exec executable="php ./bin/phpDocumentor.phar " dir=".">
            <arg value="--config conf/phpdocumentor.xml" />
        </exec>
    </target>

    <target name="dist" depends="phpunit,phpdocumentor">
        <echo msg="Finalizando..." />
        <echo msg="Terminado!" />
    </target>
</project>
